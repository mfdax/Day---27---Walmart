
<%= simple_form_for @thought do |f| %>
  <%= f.input :photo %>
  <button <%= f.submit %>SUBMIT PHOTO</button>
<% end %>

<%= paginate @thoughts %>

<h3>You have <%= pluralize @thoughts.total_count, "photos" %></h3>


<% @thoughts.each do |thought| %>
  <div class="media col-md-4">

    <div class="media-top">
        <%= link_to thought.photo.url(:large) do %>
          <%= image_tag thought.photo.url(:thumb), class: "media-object img-rounded" %>
        <% end %>
    </div>
    <div class="media-body">
      <h4 class="media-heading">
        <%= auto_link thought.content %>
      </h4>
      <p>
        Posted <%= distance_of_time_in_words_to_now thought.created_at %> ago
      </p>
    </div>
  </div>
<% end %>

<%= paginate @thoughts %>
